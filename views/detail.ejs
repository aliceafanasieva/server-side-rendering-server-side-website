<%- include('./partials/head_ov_dt') %>

<main class="detail">
  <article>
  <% items.forEach(item => { %> 
    <img src="https://fdnd-agency.directus.app/assets/<%= item.afbeelding %>" alt=""/>

    <div class="item-info">
      <h2><%= item.title %></h2>
        <p><b>auteur: </b><%= item.auteur %></p>
        <p><b>uitgever: </b><%= item.publisher %></p>
        <p><b>taal: </b><%= item.language %></p>
        <p><b>kenmerken: </b><%= item.characteristics %></p>
        <p><b>ISBN: </b><%= item.ISBN %></p>
        <p><b>editie: </b><%= item.editie %></p>
        <p><b>genre: </b><%= item.genre %></p>
        <h3>Sammenvatting:</h3>
        <p><%- item.description %></p>
    </div>
    <% }) %>
  </article>
</main>

<%- include('./partials/foot') %>